<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_main">

    <!-- Блок с текстом, который остается всегда сверху -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_bottom_bar"
        app:layout_scrollFlags="scroll|enterAlways">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_gravity="center"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/back_svg"
            android:scaleType="fitCenter"
            android:contentDescription="Вернуться"/>

        <TextView
            android:id="@+id/offerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand Model Gen"
            android:fontFamily="@font/rubik_medium"
            android:textSize="18sp"
            android:padding="20dp"
            android:textColor="@color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/imageScrollContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Описание"
                android:textColor="@color/white"
                android:fontFamily="@font/rubik_medium"
                android:textSize="20sp"
                android:padding="13dp"/>
            <TextView
                android:id="@+id/descriptionET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:padding="13dp"
                android:fontFamily="@font/rubik_light"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/showPhoneButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Показать номер"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/holo_green_dark"/>
                <Button
                    android:id="@+id/writeUserButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:text="Написать"/>
            </LinearLayout>

            <GridView
                android:id="@+id/parametersRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2"
                android:background="@drawable/rounded_background_offer_grid"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>