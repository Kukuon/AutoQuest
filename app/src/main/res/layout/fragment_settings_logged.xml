<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingsFragment"
    android:background="@color/color_main"
    android:orientation="vertical"
    android:gravity="center">
    <!-- AVATAR -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="60dp">
        <ImageView
            android:id="@+id/avatarImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/no_image_svg1"
            android:contentDescription="Аватар" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/usernameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Moshonka"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/phoneTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+79859564806"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="20dp"/>


    <TextView
        android:id="@+id/emailTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kukuon04@gmail.com"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/instructionButton"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Инструкция"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_blue_dark"/>

        <Button
            android:id="@+id/aboutDeveloperButton"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="О разработчике"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:backgroundTint="@android:color/holo_blue_dark"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/exitButton"
        android:layout_gravity="center"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        android:background="@android:color/transparent"
        android:src="@drawable/exit_svg"
        android:scaleType="fitCenter"
        android:contentDescription="Выйти"/>
</LinearLayout>